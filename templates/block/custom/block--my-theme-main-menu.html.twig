<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav me-auto">
        {% for item in main_menu %}
          {% if item.below %}
            <li class="nav-item dropdown {{ item.in_active_trail ? 'active' : '' }}">
              <a class="nav-link dropdown-toggle" href="{{ item.url }}" role="button" aria-haspopup="true" aria-expanded="false">
                {{ item.title }}
              </a>
              <ul class="dropdown-menu">
                {% for sub_item in item.below %}
                  <li><a class="dropdown-item" href="{{ sub_item.url }}">{{ sub_item.title }}</a></li>
                {% endfor %}
                <div class="dropdown-divider"></div>
              </ul>
            </li>
          {% else %}
            <li class="nav-item {{ item.in_active_trail ? 'active' : '' }}">
              <a class="nav-link" href="{{ item.url }}">{{ item.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>

    </div>
  </div>
</nav>
