<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
{#
    <a class="navbar-brand" href="{{ path('<front>') }}">Navbar</a>
#}
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% for item in main_menu %}
          {% if item.below %}
            <li class="nav-item dropdown {{ item.in_active_trail ? 'active' : '' }}">
              <a class="nav-link dropdown-toggle" href="{{ item.url }}" id="navbarDropdown" role="button" aria-expanded="false">
                {{ item.title }}
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                {% for sub_item in item.below %}
                  <li><a class="dropdown-item" href="{{ sub_item.url }}">{{ sub_item.title }}</a></li>
                {% endfor %}
              </ul>
            </li>
          {% else %}
            <li class="nav-item {{ item.in_active_trail ? 'active' : '' }}">
              <a class="nav-link" href="{{ item.url }}">{{ item.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</nav>
